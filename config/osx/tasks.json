{
    "tasks": [
      {
        "type": "cppbuild",
        "label": "C/C++: g++ Aktive Datei kompilieren",
        "command": "g++",
        "args": [
          "-g",
          "-std=c++17",
          "-fdiagnostics-color=always",
          "-Wno-c++11-narrowing",
          "-I.",
          "-I/opt/X11/include",
          "-L/opt/X11/lib",
          "-o",
          "build/${relativeFileDirname}",
          "*.cpp",
          "-lX11",
          "-pthread"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      }
    ],
    "version": "2.0.0"
  }